@model CappWebServer.Models.EditarGabaritoViewModel

@{
    ViewBag.Title = "EditarGabarito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Nome</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <hr />
        @for (int i = 0; i < ViewBag.QtdQuestao; i++)
        {
            <br>
            <p>Questão @(i + 1)</p>
            @Html.EditorFor(model => model.ListaResposta[i].Alternativa, new { htmlAttributes = new { @class = "form-control" } })
            <br>

            @Html.HiddenFor(model => model.ListaResposta[i].CodigoAluno)
            @Html.HiddenFor(model => model.ListaResposta[i].ProvaID)
            @Html.HiddenFor(model => model.ListaResposta[i].isGabarito)
            @Html.HiddenFor(model => model.ListaResposta[i].Questao)
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p>
                    @Html.ActionLink("Back to List", "Index")
                </p>
                <input type="submit" value="Salvar" class="btn btn-default btn-edit-gabarito" />
            </div>
        </div>

    </div>
}

