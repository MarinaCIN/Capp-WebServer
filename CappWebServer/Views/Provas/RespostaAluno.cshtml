@model CappWebServer.Models.RespostaAlunoViewModel

@{
    ViewBag.Title = "RespostaAluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>

    <div class="container">
        <h2>@Model.Prova.Nome</h2>
        <h3>Aluno: @ViewBag.AlunoID</h3>


        <table class="table">
            <tr>
                <th>
                    Questão
                </th>
                <th>
                    Resposta do Aluno
                </th>
                <th>
                    Gabarito
                </th>
            </tr>

            @if (Model != null && Model.RespostaGabarito != null)
            {
                for (int i = 0; i < Model.RespostaGabarito.Count(); i++ )
                {
                    <tr>
                        <td>

                            @(i + 1) 

                        </td>
                        <td>
                            @Html.DisplayFor(m => m.RespostaAluno[i].Alternativa)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.RespostaGabarito[i].Alternativa)
                        </td>
                    </tr>
                }
            }

        </table>
    </div>

    <div>
        @Html.ActionLink("Voltar para lista de resultados", "Resultados", new { id = @Model.Prova.ProvaID })
    </div>

</body>


